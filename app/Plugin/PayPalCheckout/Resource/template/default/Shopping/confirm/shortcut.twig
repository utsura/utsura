<script lang="js">
  $(function() {
    // 2重クリック対策
    $('#shopping-form button.ec-blockBtn--action').click(function (e) {
      $(this).css('pointer-events', 'none');
    });

    $('#shopping-form > div > div.ec-orderRole__summary > div > div.ec-totalBox__btn > a')
      .hide();

    $('#shopping-form > div > div.ec-orderRole__summary > div')
      .first()
      .after($('#paypal'));
  });
</script>
