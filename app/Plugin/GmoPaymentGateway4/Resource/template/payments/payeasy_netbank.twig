{% extends 'default_frame.twig' %}

{% block javascript %}
<script>
  $(function () {
    loadingOverlay();
    document.body.style.cursor = 'wait';
    setTimeout(function () {
      $('#form1').submit();
    }, 20 * 1000);
  });
</script>
{% endblock javascript %}

{% block main %}
<div style="margin: 50px 0; font-size: 110%;">
  <p>{{ 'gmo_payment_gateway.shopping.payeasy.net.note1'|trans }}</p>
  <span style="color:red;">{{ 'gmo_payment_gateway.shopping.payeasy.net.note2'|trans }}</span>
</div>
<form id="form1" name="form1" action="{{ sendData.PaymentURL }}" method="POST">
</form>
{% endblock %}
