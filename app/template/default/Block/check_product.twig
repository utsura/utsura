{% if CheckProducts|length > 0 %}
    <div class="ec-role">
        <div class="ec-sectionItemRole">
            <div class="ec-sectionItemRole__wrapper">
                <div class="ec-sectionItemRole__listItemHeading ec-secHeading--tandem">
                    <span class="ec-secHeading__en">{{'CheckProduct4.front.block.check_products.title.en'|trans}}</span>
                    <span class="ec-secHeading__ja">{{'CheckProduct4.front.block.check_products.title.ja'|trans}}</span>
                </div>
            </div>
            <div class="ec-sectionItemRole__list">
                {% for Product in CheckProducts %}
                <div class="ec-sectionItemRole__listItem">
                    <a href="{{ url('product_detail', {'id' : Product.id}) }}" class="item_photo">
                        <img class="lazyload" src="{{ asset(Product.main_list_image|no_image_product, 'save_image') }}">
                        <p class="ec-sectionItemRole__listItemTitle">{{ Product.name }}</p>
                    </a>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}
